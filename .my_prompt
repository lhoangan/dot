# inspired from https://makandracards.com/makandra/1090-customize-your-bash-prompt
source .colors.theme.bash

function prompt {

    PS1="`[[ $(git status 2> /dev/null) =~ Changes\ to\ be\ committed: ]] && echo "\[\e[33m\]" || echo "\[\e[31m\]"``[[ ! $(git status 2> /dev/null) =~ nothing\ to\ commit,\ working\ .+\ clean ]] || echo "\[\e[32m\]"`$(__git_ps1 "(%s)\[\e[00m\]")${green} →${reset_color} "

    bold_purple=${bold_purple#"\["}
    bold_purple=${bold_purple%"\]"}

    blue=${blue#"\["}
    blue=${blue%"\]"}

    bold_blue=${bold_blue#"\["}
    bold_blue=${bold_blue%"\]"}

    bold_red=${bold_red#"\["}
    bold_red=${bold_red%"\]"}

    green=${green#"\["}
    green=${green%"\]"}

    reset_color=${reset_color#"\["}
    reset_color=${reset_color%"\]"}

    DATE="\n${bold_purple}[$(date +"%Y-%m-%d %H:%M:%S")]"
    if [ "$?" = 0 ]; then STATUS="${green}✔"; else STATUS="${bold_red}✘"; fi
    ME="${bold_blue}[$(whoami)${blue}@${bold_blue}${HOSTNAME}]"
    pwd="${reset_color}${PWD}"
    echo -e ${DATE} ${STATUS} ${ME} ✰ ${pwd}
    #echo -e '\[\e[00;37m\]$(whoami)\[\e[01;37m\]:\[\e[01;34m\]\w\[\e[00m\]\$ '
    #echo -e "\n${bold_purple}$(date +"%Y-%m-%d %H:%M:%S")"
}

PROMPT_COMMAND=prompt
